<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.talat.pms.dao.MemberDao">

  <resultMap id="memberMap" type="member">
    <id column="mno" property="mno"/>
    <result column="mname" property="mname"/>
    <result column="email" property="email"/>
    <result column="pwd" property="password"/>
    <result column="tel" property="tel"/>
    <result column="birth" property="birth"/>
    <result column="mtype" property="mType"/>
  </resultMap>
  
  <insert id="insert" parameterType="member"
        useGeneratedKeys="true" keyColumn="mno" keyProperty="mno">
    insert into talat_memb(mname,email,pwd,tel,birth,mtype)
    values(#{mname}, #{email}, password(#{password}), #{tel}, #{birth}, #{mType})
  </insert>
  
  <select id="findAll" resultMap="memberMap" parameterType="string">
    select 
      tm.mno,
      tm.mname,
      tm.email,
      tm.tel,
      tm.birth,
      tm.mtype
    from talat_memb tm
    order by tm.mno asc
  </select>
  
    <select id="findByNo" resultMap="memberMap" parameterType="int">
    select 
      mno,
      mname,
      email,
      tel,
      birth,
      mtype
    from talat_memb
    where mno=#{value}
  </select>
  
  
  <select id="findByService" resultMap="memberMap" parameterType="int">
    select 
      mno,
      mname,
      email,
      tel,
      birth,
      mtype
    from talat_memb
    where mtype=#{value}
  </select>
  
    <select id="admin" resultMap="memberMap">
    select 
      mno,
      mname,
      email,
      tel,
      birth,
      mtype
    from talat_memb
    where tm.mtype=0
  </select>
 
  <update id="update" parameterType="member">
  update talat_memb tm
  <set> 
    <if test="mname != ''">tm.mname=#{mname}</if>
    <if test="email != ''">tm.email=#{email}</if>
    <if test="tel != ''">tm.tel=#{tel}</if>
    <if test="birth != null">tm.birth=#{birth}</if>
  </set>
  where tm.mno=#{value}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from talat_memb
    where mno=#{value}
  </delete>
  
</mapper>







