<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.talat.pms.dao.MemberRiderDao">

  <resultMap id="memberRiderMap" type="memberRider">
    <id column="mno" property="mno"/>
    <result column="mname" property="mname"/>
    <result column="email" property="email"/>
    <result column="pwd" property="password"/>
    <result column="tel" property="tel"/>
    <result column="birth" property="birth"/>
    <result column="mtype" property="mType"/>
    <result column="nic" property="nickName"/>
    <result column="gender" property="gender"/>
    <result column="pst_no" property="postNo"/>
    <result column="basic_addr" property="basicAddress"/>
    <result column="det_addr" property="detailAddress"/>
    <result column="prof" property="profile"/>
    <result column="pref_gender" property="preferenceGender"/>
    <result column="mrdt" property="registeredDate"/>
    <result column="star_avg" property="starAverage"/>
    <result column="rev_avg" property="reviewAverage"/>
  </resultMap>
  
  <sql id="select1">
  select 
      tm.mno,
      tm.mname,
      tm.email,
      tm.tel,
      tm.birth,
      tm.mtype,
      tj.nic,
      tj.gender,
      tj.pst_no,
      tj.basic_addr,
      tj.det_addr,
      tj.prof,
      tj.pref_gender,
      tj.mrdt,
      tj.star_avg,
      tj.rev_avg
    from talat_memb tm
      inner join talat_join tj on tm.mno=tj.mno
  </sql>
  
  <insert id="insert" parameterType="memberRider">
    insert into talat_join(mno,nic,gender,pst_no,basic_addr,det_addr,prof,pref_gender,star_avg,rev_avg)
    values(#{rmno}, #{nickName}, #{gender}, #{postNo}, #{basicAddress}, #{detailAddress}
          , #{profile}, #{preferenceGender}, #{starAverage}, #{reviewAverage})
  </insert>
  
  <select id="findAll" resultMap="memberRiderMap" parameterType="memberRider">
  <include refid="select1"/>
      order by tm.mno asc
  </select>
  
  <select id="findByNo" resultMap="memberRiderMap"  parameterType="int">
  <include refid="select1"/>
    where tm.mno=#{value}
  </select>
  
  <delete id="delete" parameterType="int">
    delete from talat_join
    where mno=#{value}
  </delete>
  
  <update id="update" parameterType="memberRider">
    update talat_join
  <set>
    <if test="nickName != ''">nic=#{nickName},</if>
    <if test="postNo != ''">pst_no=#{postNo},</if>
    <if test="basicAddress != ''">basic_addr=#{basicAddress},</if>
    <if test="detailAddress != ''">det_addr=#{detailAddress},</if>
    <if test="profile != null">prof=#{profile},</if>
    <if test="preferenceGender != ''">pref_gender=#{preferenceGender}</if>
  </set>
  where mno=#{rmno}
  </update>
  
</mapper>
